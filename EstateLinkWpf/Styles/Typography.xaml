<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fonts -->
    <FontFamily x:Key="RobotoFont">./fonts/#Roboto</FontFamily>

    <!-- Header Styles -->
    <Style x:Key="H1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource gray_6}"/>
    </Style>

    <Style x:Key="H2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource gray_6}"/>
    </Style>

    <Style x:Key="H3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource gray_6}"/>
    </Style>

    <Style x:Key="H4" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource gray_6}"/>
    </Style>

    <Style x:Key="H5" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource gray_6}"/>
    </Style>

    <!-- Text Styles -->
    <Style x:Key="TextPrimary" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="#37474F"/>
    </Style>

    <Style x:Key="TextParagraph" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="#546E7A"/>
    </Style>

    <Style x:Key="TextSecondary" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="#78909C"/>
    </Style>

    <Style x:Key="TextTertiary" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="#B0BEC5"/>
    </Style>

    <!-- Input Styles -->
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource gray_2}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Label Styles -->
    <Style x:Key="FormLabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource gray_6}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,15,15"/>
    </Style>

    <!-- Active Element Style -->
    <Style x:Key="ActiveElementStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RobotoFont}"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

</ResourceDictionary> 